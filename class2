class Banka:
    bankaname = "YATIRIM HARİKASI"
    liste =[]
    def __init__(self,name,surname,age,budget=0):
        self.name=name
        self.surname=surname
        self.age=age
        self.budget=budget
        Banka.liste.append(self)
       
    def kayıtlı_kişiler(self):
        print(20*"*","kayıtlı müşteriler",20*"*")
        if not Banka.liste:
            print("Henüz kayıtlı müşteri bulunmamaktadır.")
            return
        for müşteri in Banka.liste:
            print(f"- {müşteri.name} {müşteri.surname}, Yaş: {müşteri.age}, Bakiye: {müşteri.budget}")

    def üyeol(self):
        name = input("adınızı giriniz:")
        surname= input("soyadınızı giriniz:")
        age= int(input("yaşınızı giriniz:"))
        budge=0
        if age>=18:
            
            yeni_üye = Banka(name, surname, age, budge)
            return "üye kaydı yapıldı"
        else:
            print("kayıt yapılmadı")

    def üyelikiptali(self,kişi,soyisim):
        for kayıt in Banka.liste:
            if kayıt.name==kişi and kayıt.surname==soyisim:
                verilenpara=kayıt.budget
                print(kayıt.paraçek(verilenpara))
                Banka.liste.remove(kayıt)
                print(f"""{verilenpara} paranızı bankamatikten alabilirsiniz
üyeliğiniz iptal edilmiştir başarıyla""")
                
            else:
                print("işlem gerçekleştirilemedi")
        

    def bilgiekranı(self):
        return(f"{self.name} {self.surname} {self.age} {self.budget}")

    def üyeara(self,kişi,soyismi):
        for kayıt in Banka.liste:
            if kayıt.name==kişi and kayıt.surname==soyisim:
                print("kişi bulundu")
                kayıt.bilgiekranı()
            else:
                print("aradığınız kişi bulunamadı")
    def parayatır(self,tutar):
        self.budget +=tutar
        return f"{tutar} tl eklenmiştir hesabınıza yeni bakiyeniz: {self.budget}"
    def paraçek(self,tutar):
        if tutar<=self.budget:
            self.budget-=tutar
            return f"{tutar} tl çekilmiştir yeni bakiyeniz: {self.budget}"
        else:
            return "işlem yapılamadı"
            
